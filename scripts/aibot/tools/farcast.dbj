js_strict(true);

include("common.dbl");

function main() {
	addEventListener("mouseclick", function (type, x, y) {
		var hand = (type == 0 ? HAND_LEFT : (type == 1 ? HAND_RIGHT : false);
		var pos = screenToAutomap(x, y);
		var cast = keystate(0x12); // alt key
		if(hand && cast)
			click(CLICK_SINGLE|hand, (hand == HAND_LEFT), pos.x, pos.y);
	});

	while(me.ingame) delay(1000);
}