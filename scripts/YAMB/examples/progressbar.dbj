include("progressbar.dbl");

function main() {
	print("Creating a default progress bar.");

	mypb = createProgressBar();

	print("Increasing progress bar to 100%...");

	for(i=0;i<1000;i++) {
		setProgressBar(mypb, (i+1)/10);
		delay(10);
	}

	print("Terminating in 5 seconds.");
	delay(5000);
}

